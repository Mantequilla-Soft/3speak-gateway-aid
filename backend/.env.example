# Gateway Monitor Environment Configuration

# Database Connections
MONGODB_VERIFICATION_ENABLED=true
MONGODB_URI=mongodb://username:password@host:port/
DATABASE_NAME=spk-encoder-gateway
SQLITE_DB_PATH=./data/gateway-monitor.db

# Gateway API
GATEWAY_BASE_URL=https://encoder.3speak.tv/api/v0

# Gateway Monitor Identity (DID Key for connecting as monitoring node)
GATEWAY_MONITOR_DID_KEY=did:key:your_did_key_here
GATEWAY_MONITOR_PRIVATE_KEY=your_private_key_here_for_jws_signing

# Service Configuration
PORT=3005
FRONTEND_PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Security
CORS_ORIGINS=http://localhost:3000,https://monitor.3speak.tv

# Admin Authentication
# These credentials are required to create, update, or delete encoder records
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# Embed Video Service Admin Password
# Required for re-dispatching embed jobs via the proxy endpoint
EMBED_ADMIN_PASSWORD=mantequilla2025?

# Monitoring Configuration
GATEWAY_POLL_INTERVAL=5000
ACTIVE_JOBS_POLL_INTERVAL=30000
STATISTICS_RETENTION_DAYS=30

# Port Configuration (Flexible deployment)
# Backend API Server
BACKEND_PORT=3005
# Frontend Development Server
VITE_PORT=3000
# WebSocket Server
WEBSOCKET_PORT=3002

# Discord Alerts (Optional - uncomment and add your webhook URL to enable alerts)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL_HERE