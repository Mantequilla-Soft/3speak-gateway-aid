{
  "name": "gateway-monitor",
  "version": "1.0.0",
  "description": "Gateway Monitoring Service for 3Speak video encoding infrastructure",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "bash start-dev.sh",
    "dev:manual": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd backend && npm run dev",
    "dev:client": "cd frontend && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd backend && npm run build",
    "build:client": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd backend && npm test",
    "test:client": "cd frontend && npm test",
    "db:init": "cd backend && npm run db:init",
    "setup:ports": "node scripts/setup-ports.js",
    "docker:build": "docker build -t gateway-monitor .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "monitoring",
    "video-encoding",
    "3speak",
    "gateway",
    "typescript",
    "react"
  ],
  "author": "3Speak Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.13.1"
  }
}
